---
import Layout from "@layouts/layout.astro"
import Contact from "@components/ContactForm.svelte"
---

<Layout title="Contact Us - Alken Homes" description="Get in touch with us. We are available to answer all your questions about construction projects" canonical={Astro.request.url}>
	<header class="page-header wow fadeInUp" data-wow-delay="0.5s" data-background="/images/contact.jpg">
    <div class="container">
      <h2>Contact</h2>
      <div class="bosluk3"></div>
      <p>
        <a href="/" class="headerbreadcrumb">Home</a>
        <i class="flaticon-right-chevron"></i>Contact
      </p>
    </div>
    <!-- end container -->
  </header>
  <main>
    <!--İletişim İcon Alanı-->
    <section class="iletisim-icon-alani">
      <div class="tablo">
        <div class="tablo--1-ve-3 wow fadeInLeft" data-wow-delay="0.5s">
          <div class="ozellik-kutu-iletisim" onclick="location.href='#';" style="cursor:pointer;" data-tilt>
            <div class="icon">
              <i class="flaticon-call"></i>
            </div>
            <h3 class="baslik-4 h-yazi-margin-kucuk-2">Customer service</h3>
            <p class="ozellik-kutu-iletisim--yazi"> +254 722 503 853 </p>
            <p class="ozellik-kutu-iletisim--yazi"> +254 702 385 050 </p>
            <p class="ozellik-kutu-iletisim--yazi"> +254 726 225 765 </p>
          </div>
        </div>
        <div class="tablo--1-ve-3 wow fadeInLeft" data-wow-delay="0.5s">
          <div class="ozellik-kutu-iletisim" onclick="location.href='#';" style="cursor:pointer;" data-tilt>
            <div class="icon">
              <i class="flaticon-email"></i>
            </div>
            <h3 class="baslik-4 h-yazi-margin-kucuk-2">Mail Address</h3>
            <p class="ozellik-kutu-iletisim--yazi"> info@alkenhomes.com </p>
            <p class="ozellik-kutu-iletisim--yazi"> &nbsp; </p>
            <p class="ozellik-kutu-iletisim--yazi"> &nbsp; </p>
          </div>
        </div>
        <div class="tablo--1-ve-3 wow fadeInRight" data-wow-delay="0.5s">
          <div class="ozellik-kutu-iletisim" onclick="location.href='#';" style="cursor:pointer;" data-tilt>
            <div class="icon">
              <i class="flaticon-location"></i>
            </div>
            <h3 class="baslik-4 h-yazi-margin-kucuk-2">Office</h3>
            <p class="ozellik-kutu-iletisim--yazi"> Kahawa Hse, 7<sup>th</sup> Floor, Suite </p>
            <p class="ozellik-kutu-iletisim--yazi">P.O.BOX 7343 &mdash; 00300</p>
            <p class="ozellik-kutu-iletisim--yazi">Nairobi, Kenya</p>
          </div>
        </div>
      </div>
    </section>
    <!--İletişim Form Alanı-->
    <section class="iletisim-form-alani">
      <div role="form" class="wpcf7" id="wpcf7-f1129-o1" lang="en-US" dir="ltr">
        <div class="screen-reader-response">
          <p role="status" aria-live="polite" aria-atomic="true"></p>
          <ul></ul>
        </div>
        <Contact client:load />
      </div>
    </section>
  </main>
  <p>
    <iframe loading="lazy" style="border:0;" frameborder="0" src="https://maps.google.com/maps?q=kahawa%20house&t=&z=17&ie=UTF8&iwloc=&output=embed" scrolling="no" marginheight="0" marginwidth="0" allowfullscreen="allowfullscreen" width="100%" height="450px"></iframe>
  </p>
</Layout>
