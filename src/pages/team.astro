---

<Layout title="Our Team" description="The team at Eburon company limited is made up of professionals who are well versed with construction projects and are able to deliver the very best in the construction industry.">
	<section class="container mx-auto px-4 mt-48">
		<h1 class="text-4xl text-indigo-600 text-center uppercase my-6 font-bold">
			Our Team
		</h1>
		<p class="text-center mb-6">
			Meet members of our team and get to interact with us
		</p>
		{
			team.map((item) => (
				<div class="p-8 sm:flex sm:space-x-6 bg-gray-200 shadow-md rounded-lg my-4">
					<div class="flex-shrink-0 w-full mb-6 h-78 sm:h-36 sm:w-36 sm:mb-0">
						<img src={item.image} alt={item.name} class="object-cover object-center sm:w-full sm:h-full rounded rounded-full" />
					</div>
					<div class="flex flex-col space-y-4">
						<div>
							<h2 class="text-2xl font-semibold">
								{item.name}
							</h2>
							<span class="text-indigo-600">
								{item.role}
							</span>
						</div>
						<div class="space-y-3">
							<span class="flex items-center space-x-2">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" aria-label="Email address" class="w-4 h-4">
									<path fill="currentColor" d="M274.6,25.623a32.006,32.006,0,0,0-37.2,0L16,183.766V496H496V183.766ZM464,402.693,339.97,322.96,464,226.492ZM256,51.662,454.429,193.4,311.434,304.615,256,268.979l-55.434,35.636L57.571,193.4ZM48,226.492,172.03,322.96,48,402.693ZM464,464H48V440.735L256,307.021,464,440.735Z"></path>
								</svg>
								<span>
									{item.email}
								</span>
							</span>
							<span class="flex items-center space-x-2">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" aria-label="Phonenumber" class="w-4 h-4">
									<path fill="currentColor" d="M449.366,89.648l-.685-.428L362.088,46.559,268.625,171.176l43,57.337a88.529,88.529,0,0,1-83.115,83.114l-57.336-43L46.558,362.088l42.306,85.869.356.725.429.684a25.085,25.085,0,0,0,21.393,11.857h22.344A327.836,327.836,0,0,0,461.222,133.386V111.041A25.084,25.084,0,0,0,449.366,89.648Zm-20.144,43.738c0,163.125-132.712,295.837-295.836,295.837h-18.08L87,371.76l84.18-63.135,46.867,35.149h5.333a120.535,120.535,0,0,0,120.4-120.4v-5.333l-35.149-46.866L371.759,87l57.463,28.311Z"></path>
								</svg>
								<span>
									{item.phone}
								</span>
							</span>
							<span class="flex items-center space-x-2">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
								<span>
									{item.work_phone}
								</span>
							</span>
						</div>
						<span>
							{item.bio}
						</span>
					</div>
				</div>
			))
		}
	</section>
</Layout>
